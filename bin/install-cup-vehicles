#!/bin/bash
set -e

. /usr/local/bin/common
. /usr/local/bin/google-download

echo "Installing cup_vehicles-1.10.0"
pushd /tmp > /dev/null
gdownload 0By04o_GxOry3OG1qcC1oUEwyUXM https://drive.google.com/uc?export=download @CUP_Vehicles-1.10.0.zip
unzip @CUP_Vehicles-1.10.0.zip && rm -f @CUP_Vehicles-1.10.0.zip
pushd @CUP_Vehicles > /dev/null
mv Keys/cup_vehicles-1.10.0.bikey /opt/arma3/keys/cup_vehicles-1.10.0.bikey 
rm -rf *.txt *.sha1 Keys 
find . -depth -exec rename 's/(.*)\/([^\/]*)/$1\/\L$2/' {} \; 
popd > /dev/null
mv @CUP_Vehicles /opt/arma3/@CUPVehicles
popd